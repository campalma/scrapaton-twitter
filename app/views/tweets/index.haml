#content_grap
  .exe_x
    .labels

      -t=(@max-@min)/10
      -(0..9).each do |c|
        .item
          .bar_grid
            .name_grid
              -if c==0
                Unidad
              -if c==1
                11-sept
              -if c==2
                Asamblea
              -if c==3
                Empleo
              -if c==4
                Prevision
              -if c==5
                F. Berrios
              -if c==6
                Conflictos
              -if c==7
                Rechazo L.
              -if c==8
                Matrimonio
              -if c==9
                AVP

          %span.hour
            ="00:#{Time.at(@min+(t*c)).min}"

  .exe_y
  .candidates


    -(0..6).each do |c|
      .grid
        -if c==0
          .name
            ="Longueira"
        -if c==1
          .name
            ="Allamand"
        -if c==2
          .name
            ="Gomez"
        -if c==3
          .name
            ="Orrego"
        -if c==4
          .name
            ="Velasco"
        -if c==5
          .name
            ="Bachelet"

  -@groups.each do |key, group|
    -t = group.first
    -unless t.nil?
      -time = t.created_at.to_i
      -left = (@a*time+@b).to_i
      -bottom=0
      -if t.candidate== "bachelet"
        -bottom = @bachelet
      -if t.candidate== "velasco"
        -bottom = @velasco
      -if t.candidate== "orrego"
        -bottom = @orrego
      -if t.candidate== "gomez"
        -bottom = @gomez
      -if t.candidate== "allamand"
        -bottom = @allamand
      -if t.candidate== "longueira"
        -bottom = @longueira
      -color = t.positive ? "positive" : "negative"
      -width= (@ga*group.count+@gb).to_i

      .circle{style: "left: #{left}px; bottom: #{bottom}px; width:#{width}px;height:#{width}px", class: color}
=image_tag 'manitos.png', class: "manitos"




