#content_grap
  .exe_x
    .labels

      -(0..9).each do |c|
        .item
          .bar_grid
            .name_grid
              nombre
          %span.hour
            -if c==0
              00:06
            -if c==1
              00:12
            -if c==2
              00:18
            -if c==3
              00:24
            -if c==4
              00:30
            -if c==5
              00:36
            -if c==6
              00:42
            -if c==7
              00:48
            -if c==8
              00:54
            -if c==9
              00:60
  .exe_y
  .candidates


    -(0..6).each do |c|
      .grid
        -if c==0
          .name
            ="Longueira"
        -if c==1
          .name
            ="Allamand"
        -if c==2
          .name
            ="Gomez"
        -if c==3
          .name
            ="Orrego"
        -if c==4
          .name
            ="Velasco"
        -if c==5
          .name
            ="Bachelet"

  -@groups.each do |key, group|
    -puts group.count
    -t = group.first
    -unless t.nil?
      -time = t.created_at.to_i
      -left = (@a*time+@b).to_i
      -bottom=0
      -if t.candidate== "bachelet"
        -bottom = @bachelet
      -if t.candidate== "velasco"
        -bottom = @velasco
      -if t.candidate== "orrego"
        -bottom = @orrego
      -if t.candidate== "gomez"
        -bottom = @gomez
      -if t.candidate== "allamand"
        -bottom = @allamand
      -if t.candidate== "longueira"
        -bottom = @longueira
      -color = t.positive ? "positive" : "negative"
      -width= group.count
      .circle{style: "left: #{left}px; bottom: #{bottom}px; width:#{width}px;height:#{width}px", class: color}




